@model MagicVilla_Web.Models.VM.VillaNumberCreateVM

<form asp-action="CreateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />

        <div class="row">
            
            <div asp-validation-summary="All" class="text-danger"></div>

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                foreach (var item in ViewData.ModelState.Values)
                {
                    if (item.Errors.Count > 0)
                    {
                        <div class="alert alert-warning alert-dismissable">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            @item.Errors[0].ErrorMessage
                        </div>
                    }
                }
            }
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails2" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails2" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.Begin" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="VillaNumber.Begin" type="date"/>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.End" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="VillaNumber.End" type="date" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.Value1" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="VillaNumber.Value1" type="text" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.Value2" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="VillaNumber.Value2" type="text" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.Value3" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="VillaNumber.Value3" type="text" />
            </div>

            <div class="col-5">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
